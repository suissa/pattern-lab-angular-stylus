atom-structure(pad)
  display inline-block
  float left
  padding pad

atom-size(height, width = 100%, min-width = 30%)
  width width
  min-width min-width
  height height

atom-create(bg)
  atom-structure(4px)
  atom-size(80px)
  color color-text
  font-weight bold
  background bg
  border 0

.atom-button
  atom-create(#ccc)
.atom-button-login-facebook
  atom-create(#18249c)
.atom-button-login-twitter
  atom-create(#00a5c9)
.atom-button-login-plus
  atom-create(#c2000a)